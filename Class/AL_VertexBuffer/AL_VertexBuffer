' Class module: AL_VertexBuffer
' Describes a Buffer for Vertices

' Variable Declaration
    Private p_Buffer() As AL_Vertex
'

' Get Let Set
    Public Property Let Buffer(ByVal Index As Integer, ByVal Value As AL_Vertex)
        If Index > UBound(p_Buffer) Then
            ReDim Preserve p_Buffer(Index)
            p_Buffer(Index) = Value
        End If
    End Property

    Public Property Get Buffer(ByVal Index As Integer) As AL_Vertex
        Location = p_Buffer(Index)
    End Property
'

Public Sub TEST()

    Dim Test As New AL_Vertex
    p_Buffer(0) = Test
    p_Buffer(4) = Test
    p_Buffer(2) = p_Buffer(4)

End Sub