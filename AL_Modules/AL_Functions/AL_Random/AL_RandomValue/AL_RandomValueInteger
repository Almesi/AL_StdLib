Function AL_RandomValueInteger(Optional ByVal Seed As Long = 0, Optional ByVal UpperLimit As Integer = 0, Optional ByVal LowerLimit As Integer = 0) As Integer
    
    If Seed = 0 Then
        Dim Seconds As New AL_Date
        Seed = Seconds.AbsoluteSecond
    End If
    Randomize Seed
    If UpperLimit = 0 Then
        UpperLimit = 32.767
    End If
    If LowerLimit = 0 Then
        LowerLimit = -32.767
    End If
    AL_RandomValueInteger = Int((UpperLimit - LowerLimit + 1) * Rnd + LowerLimit)

End Function