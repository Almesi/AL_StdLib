Public Function AL_Check_String(Text As String, Optional CompareText As String = Empty, Optional CompareType As String = Empty) As Boolean

    If CompareText <> Empty Then
        Select Case CompareType
            Case "="
                If Text = CompareText Then
                    AL_Error_Show AL_Error_System, 0006, Text, CompareText
                End If
            Case ">"
                If Text > CompareText Then
                    AL_Error_Show AL_Error_System, 0007, Text, CompareText
                End If
            Case "<"
                If Text < CompareText Then
                    AL_Error_Show AL_Error_System, 0008, Text, CompareText
                End If
            Case ">="
                If Text >= CompareText Then
                    AL_Error_Show AL_Error_System, 0009, Text, CompareText
                End If
            Case "=<"
                If Text =< CompareText Then
                    AL_Error_Show AL_Error_System, 0010, Text, CompareText
                End If
            Case "<>"
                If Text <> CompareText Then
                    AL_Error_Show AL_Error_System, 0011, Text, CompareText
                End If
            Case Empty
                AL_Error_Show AL_Error_System, 0002, Text, CompareText
                AL_Check_String = AL_IS_ERROR
            Case Else
                AL_Error_Show AL_Error_System, 0001, Text, CompareText
                AL_Check_String = AL_IS_ERROR
        End Select
            If Text = Empty Then
                AL_Error_Show AL_Error_System, 0002, Text, CompareText
                AL_Check_String = AL_IS_ERROR
            End If
        Else
            If Text = Empty Then
                AL_Error_Show AL_Error_System, 0002, Text, CompareText
                AL_Check_String = AL_IS_ERROR
            End If
    End If


End Function