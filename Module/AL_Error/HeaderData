    Private AL_Error_Category_System(99, 2) As Variant
    Private AL_Error_Category_Compiler(99, 2) As Variant
    Private AL_Error_Category_Linker(99, 2) As Variant
    Private AL_Error_Category_Module(99, 2) As Variant
    Private AL_Error_Category_Class(99, 2) As Variant
    Private AL_Error_Category_Form(99, 2) As Variant
    Private AL_Error_Category_Workbook(99, 2) As Variant
    Private AL_Error_Category_WorkSheet(99, 2) As Variant
    ' Used for Enumeration of what the Array Position is used for
        Private Enum AL_Error_Data
            Error_Severity = 0
            Error_Index = 1
            Error_Message = 2
        End Enum
    '
